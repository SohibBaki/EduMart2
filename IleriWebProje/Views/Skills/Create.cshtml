@model NewSkillsVM
@using IleriWebProje.Data
@using IleriWebProje.Data.Enums

@{
    ViewData["Title"] = "Create a new Skill";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>Create a new Skill</h4>
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="SkillName" class="control-label"></label>
                                <input asp-for="SkillName" class="form-control" />
                                <span asp-validation-for="SkillName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="StartDate" class="control-label"></label>
                                <input asp-for="StartDate" type="date" class="form-control" value="@Model.StartDate.ToString("yyyy-MM-dd")" />
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="EndDate" class="control-label"></label>
                                <input asp-for="EndDate" type="date" class="form-control" value="@Model.EndDate.ToString("yyyy-MM-dd")" />
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Price" class="control-label"></label>
                                <input asp-for="Price" type="number" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ImageURL" class="control-label"></label>
                                <input asp-for="ImageURL" class="form-control" />
                                <span asp-validation-for="ImageURL" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="PlatformId" class="control-label"></label>
                                <select asp-for="PlatformId" class="form-control" asp-items="ViewBag.Platforms"></select>
                                <span asp-validation-for="PlatformId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="SkillCategory" class="control-label"></label>
                                <select asp-for="SkillCategory" class="form-control" asp-items="Html.GetEnumSelectList<Skill_Category>()"></select>
                                <span asp-validation-for="SkillCategory" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="SkillOrganizerID" class="control-label"></label>
                                <select asp-for="SkillOrganizerID" class="form-control" asp-items="ViewBag.SkillOrganizers"></select>
                                <span asp-validation-for="SkillOrganizerID" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="MentorIds" class="control-label"></label>
                                <select asp-for="MentorIds" class="form-control" asp-items="ViewBag.Mentors" multiple></select>
                                <span asp-validation-for="MentorIds" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <textarea asp-for="Description" class="form-control"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4 offset-4 text-center">
                        <img width="100%" id="ImageUrlPreview" />
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                    </div>

                </form>

            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script>
        $("#ImageURL").on("change", function () {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $(this).val();
        })
    </script>
}
